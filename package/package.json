{
  "name": "@buildercss/core",
  "version": "0.1.0",
  "description": "Semantic HTML templates with pure CSS styling - No utility classes, no build tools, no complexity",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./styles/index.css",
    "./styles/*": "./styles/*",
    "./templates/waitlist": {
      "types": "./dist/templates/waitlist/index.d.ts",
      "import": "./dist/templates/waitlist/index.js"
    },
    "./templates/waitlist/*": {
      "types": "./dist/templates/waitlist/*.d.ts",
      "import": "./dist/templates/waitlist/*.js"
    },
    "./templates/ontology/*": "./templates/ontology/*",
    "./templates/ontology/Layout": "./templates/ontology/Layout.mdx",
    "./templates/ontology/Thing": "./templates/ontology/Thing.mdx",
    "./templates/ontology/Things": "./templates/ontology/Things.mdx"
  },
  "files": [
    "dist",
    "styles",
    "templates"
  ],
  "scripts": {
    "build": "tsup && pnpm build:types",
    "build:types": "cp templates/waitlist/*.d.ts dist/templates/waitlist/",
    "build:css": "cat styles/variables.css styles/base.css styles/layouts/*.css styles/components/*.css > dist/buildercss.css",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "css",
    "semantic",
    "html",
    "templates",
    "mdx",
    "components",
    "layouts",
    "no-build",
    "classless"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/buildercss.git",
    "directory": "package"
  },
  "bugs": {
    "url": "https://github.com/dot-do/buildercss/issues"
  },
  "homepage": "https://buildercss.dev",
  "devDependencies": {
    "@mdx-js/esbuild": "^3.1.0",
    "@types/mdx": "^2.0.13",
    "@types/react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
